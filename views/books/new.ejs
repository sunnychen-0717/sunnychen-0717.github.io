<% layout('layout') -%>
<h1>Add Book</h1>

<% if (typeof error === 'string' && error) { %>
  <div class="alert error"><%= error %></div>
<% } %>

<form method="POST" action="/books" style="max-width:520px;">
  <div class="field">
    <label for="title">Title</label>
    <input id="title" type="text" name="title" value="<%= (values && values.title) || '' %>" required />
  </div>
  <div class="field">
    <label for="author">Author</label>
    <input id="author" type="text" name="author" value="<%= (values && values.author) || '' %>" required />
  </div>
  <button class="btn btn-primary" type="submit">Save</button>
</form>
